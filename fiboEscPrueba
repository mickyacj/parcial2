object FibonacciScala{
	
	def main(args:Array[String]):Unit={
		var a=0
		var b=1
		var c=0
		println("Escribe un valor para n:")
		val n=scala.io.StdIn.readInt()
		println("Los primeros "+n+" n√∫meros fibonacci son:")
		for(i<- 1 to n)
		{
			if( i == 1 )
			{
				println(a)
			}
			else if( i == 2 )
			{
				println(b)
			} 
			   
			else
			{
				c=a+b
				println(c)
				a=b
				b=c
			}
		}	
	}
}
